<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateSeries">

<!--    inserindo nome, dia da semana que pretende assistir,
        plataforma onde assistir, temporada que esta assistindo e o
        Ãºltimo episodio assistido   -->

    <LinearLayout
        android:id="@+id/ll_add_series_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_marginTop="15dp"
        android:padding="12dp"

        android:background="@drawable/design_create_account"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    >

        <TextView
            android:id="@+id/txt_title_add_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginHorizontal="10dp"

            android:text="@string/title_add_series"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@id/rl_create_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_name_add_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"

            android:text="@string/txt_name_add_series"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_edt_name_add_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/design_edit"
            android:padding="10dp"

            android:textColor="@color/blue"
            android:textSize="14dp"
            android:alpha="0.8"

            android:hint="@string/txt_sub_name"
            android:textColorHint="@color/blue"
            android:inputType="textPersonName"
            android:maxLength="20"
            />

        <TextView
            android:id="@+id/txt_description_add_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"

            android:text="@string/txt_description_add_series"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txt_edt_email_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/design_edit"
            android:padding="10dp"

            android:textColor="@color/blue"
            android:textSize="14dp"
            android:alpha="0.8"

            android:textColorHint="@color/blue"
            android:hint="@string/txt_description"
            android:maxLength="60"
            android:inputType="textAutoComplete"
        />

        <TextView
            android:id="@+id/txt_sub_password_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"

            android:text="@string/dt_pretend_add_series"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold"
        />

        <EditText
            android:id="@+id/txt_edt_password_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/design_edit"
            android:padding="10dp"

            android:textColor="@color/blue"
            android:textSize="12sp"
            android:alpha="0.8"

            android:textColorHint="@color/blue"
            android:hint="@string/dt_date_add_series"
            android:inputType="date|text"
        />

        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"

            android:backgroundTint="@color/blue"
            android:text="@string/button_create_account"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="13dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>